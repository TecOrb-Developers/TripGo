<div class="modal fade" id="forgot" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header model-head">
					<button type="button" class="close close-1" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<span class="left-span">Forgot Password</span>
				</div>
				<%= form_for :user, url: user_password_path,:html => {:class => "form-horizontal"},method: :post do |f| %>
			    <div class="modal-body">
					<div class="form-group">
								<label for="inputEmail3" class="col-sm-4 control-label ctrl-label ">Email</label>
								<div class="col-sm-8">
								<%= f.email_field :email, autofocus: true,:class=> "form-control input-box", :placeholder=>"Enter your Email",:id => "user_emailid"%>
								<span class="forgot_email_field error"></span>
						
								</div>
					</div>
			    </div>
			    <div class="modal-footer model-ftr">
			    <%= f.submit "Submit",:class=>"btn btn-info blue-button btn-black forgot_pass" %>
			    </div>
			    <%end%>
			</div>
		  </div>
	</div>

